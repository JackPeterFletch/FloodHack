<h2>Forgot your password?</h2>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :role =>"form", :html => { :method => :post }) do |f| %>
  <%= devise_error_messages! %>

	<div class="form-group">
		<%= f.label :email %>
		<%= f.email_field :email, :autofocus => true %>
	</div>

	<div class="form-group">
		<%= f.submit "Send me reset password instructions", :class =>"btn btn-success btn-md" %>
	</div>
<% end %>

<%= render "devise/shared/links" %>
